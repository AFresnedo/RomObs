<% provide(:title, 'New TotD') %>
<h1>Create article</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@article) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label "Thought" %>
      <%= f.text_area :body, class: 'form-control' %>

      <div class="hide">
      <%= f.label :purpose %>
      <%= f.text_area :purpose, class: 'form-control' %>
      </div>

      <div class="hide">
      <%= f.label "Page names: welcome, info, about, contact" %>
      <%= f.text_field :page, class: 'form-control' %>
      </div>

      <%= f.submit "Submit Thought", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
