<%= form_for @article do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="container">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new article..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
