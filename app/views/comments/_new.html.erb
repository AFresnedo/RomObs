<div class="row">
  <div class="col-sm-8">
    <%= form_for(@comment) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %>

      <div id="comment-new-userid">
      <%= f.label :user_id %>
      <%= f.text_field :user_id, class: 'form-control' %>
      </div>

      <div id="comment-new-blogid">
      <%= f.label :blog_id %>
      <%= f.text_field :blog_id, class: 'form-control' %>
      </div>

      <%= f.submit "Post comment", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
