<%= provide(:title, "Welcome") %>
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h1>Roman's Observatory</h1>
      <%# change to bootstrap for auto-resizing, unknown how to target %>
      <%= image_tag("Palomar_Observatory_2.jpg", alt: "Observatory Picture",
                   size: image_resize(1280.00, 900.00, 25.00)) %>
      <h3>A Webblog For Observers of Connections</h3>
    </div>
    <div class="col-sm-6">
      <h3>Thought of the Day</h3>
      <% totd = @articles.find_by(purpose: 'totd') %>
      <% if totd %>
        <q><%= totd.body %></q>
      <% else %>
        <em>None</em>
      <% end %>
      <% if @mode=='edit' %>
        <p id="totd-new"><%= link_to "New Thought", '/totd/new' %></p>
      <% end %>
  </div>
  <div class="row">
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
    </div>
  </div>
</div>
